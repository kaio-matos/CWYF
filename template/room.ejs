<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%- include("partials/bootstrap")%>

    <style></style>
    <title>CWYF</title>
  </head>
  <body>
    <%- include("partials/header")%>

    <main class="container mt-5">
      <h1>Room</h1>
      <div
        id="message_container"
        style="height: 65vh; overflow-y: scroll"
        class="container border border-dark rounded bg-dark bg-opacity-25"
      ></div>

      <form id="form_message" class="input-group mb-3 mt-3">
        <input
          type="text"
          class="form-control"
          name="message"
          placeholder="Message"
          aria-label="message"
          aria-describedby="message"
          autocomplete="off"
        />
        <button class="btn btn-primary" type="submit" id="send">Send</button>
      </form>
      <div class="warning_message"></div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./warning.js"></script>
    <script src="./chat.js"></script>
    <script src="./user.js"></script>
  </body>
</html>
