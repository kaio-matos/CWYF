<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%- include("partials/bootstrap")%>

    <title>CWYF</title>
  </head>
  <body>
    <%- include("partials/header")%>

    <main class="container-fluid px-5">
      <section>
        <form id="form_addNewFriend" class="input-group mb-3 mt-3">
          <input
            type="text"
            class="form-control"
            name="friendEmail"
            placeholder="Friend Email"
            aria-label="friendEmail"
            aria-describedby="friendEmail"
            autocomplete="off"
          />
          <button class="btn btn-primary" type="submit" id="addNewFriend">
            Add new friend
          </button>
        </form>
        <div class="warning_message"></div>
      </section>
      <section class="row m-auto gap-2 mt-5 w-100">
        <div class="col-md">
          <div id="userData">
            <h1>Name</h1>
            <p>Email</p>
          </div>

          <div class="mt-5">
            <h2>Friends</h2>
            <ul
              style="max-height: 50vh; overflow-y: scroll"
              id="userFriends"
              class="p-0"
            ></ul>
          </div>
        </div>
        <div class="col-md"><%- include("partials/chat")%></div>
      </section>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="./warning.js"></script>
    <script src="./user.js"></script>
    <script src="./myaccount.js"></script>
  </body>
</html>
